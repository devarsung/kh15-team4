<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="board">
	<select id="sequence" resultType="long">
		select column_board_seq.nextval from dual
	</select>

	<insert id="add">
		insert into column_board(
			board_no, board_title
		)
		values(
			#{boardNo}, #{boardTitle}
		)
	</insert>
	
	<select id="list" resultType="BoardDto">
		select * from column_board
	</select>
	
	<select id="find" resultType="BoardDto">
		select * from column_board where board_no = #{boardNo}
	</select>
	
	<select id="listCards" resultType="CardDto">
		select * from card where column_no = #{columnNo}
	</select>
	
	<resultMap id="cardColumnDto" type="CardColumnDto">
		<association property="columnDto" javaType="ColumnDto">
	 		<result column="column_no" property="columnNo"/>
	 		<result column="column_title" property="columnTitle"/>
	 		<result column="column_order" property="columnOrder"/>
	 		<result column="board_no" property="boardNo"/>
	 	</association>
	 	<collection property="cards" javaType="List" ofType="CardDto" select="listCards" column="column_no">
	 		<result column="card_no" property="cardNo"/>
	 		<result column="card_title" property="cardTitle"/>
	 		<result column="card_order" property="cardOrder"/>
	 		<result column="column_no" property="columnNo"/>
	 	</collection>
	</resultMap>
	
	<select id="cardColumnList" resultMap="cardColumnDto">
		select * from card_column where board_no = #{boardNo}
	</select>
	
</mapper>









